@page
@model DaliFood.AdminPanel.Pages.Users.ProfileModel
@{
    ViewData["Title"] = "مدیریت کاربران";
    ViewData["Section"] = "خانه";

}

<h1>@ViewData["Title"]</h1>

<div class="card">
    <div class="card-header header-elements-inline">

        <h5 class="card-title">ویرایش جدید</h5>
        <div class="header-elements">
            <div class="list-icons">
                <a class="list-icons-item" data-action="collapse"></a>
                @*<a class="list-icons-item" data-action="reload"></a>
                <a class="list-icons-item" data-action="remove"></a>*@
            </div>
        </div>
    </div>

    <div class="card-body">
        <form role="form" method="post">
            <div class="row">
                <div class="col-md-12">
                    <fieldset>
                        <legend class="font-weight-semibold"><i class="icon-reading mr-2"></i>کاربران</legend>
                        <input type="hidden" asp-for="Input.Id">
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">نام:</label>
                            <div class="col-lg-9">
                                <input type="text" class="form-control" placeholder="نام کاربر را اینجا وارد کنید" asp-for="Input.Name">
                                <span asp-validation-for="Input.Name" class="field-validation-error text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">نام خانوادگی:</label>
                            <div class="col-lg-9">
                                <input type="text" class="form-control" placeholder="نام خانوادگی کاربر را اینجا وارد کنید" asp-for="Input.Family">
                                <span asp-validation-for="Input.Family" class="field-validation-error text-danger"></span>
                            </div>
                        </div>

                    

                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">تلفن:</label>
                            <div class="col-lg-9">
                                <input type="text" class="form-control numbersOnly" placeholder="تلفن کاربر را اینجا وارد کنید" asp-for="Input.Phone">
                                <span asp-validation-for="Input.Phone" class="field-validation-error text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">نقش کاربر:</label>
                            <div class="col-lg-9">
                                <select class="form-control" asp-for="SelectedRole" asp-items="Model.Roles"></select>
                                <span asp-validation-for="SelectedRole" class="field-validation-error text-danger"></span>
                            </div>
                        </div>

                    </fieldset>
                </div>
            </div>

            <div class="text-right">
                <input type="submit" class="btn btn-success" value="تایید"><i class="icon-paperplane ml-2"></i>
            </div>
        </form>
    </div>
</div>




@section Scripts {
    <partial Name="_ValidationScriptsPartial" />

    <script src="~/PanelTheme/global_assets/js/plugins/forms/selects/select2.min.js"></script>
    <script src="~/PanelTheme/global_assets/js/plugins/forms/styling/uniform.min.js"></script>
    <script src="~/PanelTheme/global_assets/js/demo_pages/form_layouts.js"></script>
    <script src="~/PanelTheme/global_assets/js/plugins/editors/summernote/summernote.min.js"></script>
    <script src="~/PanelTheme/global_assets/js/demo_pages/editor_summernote.js"></script>

    <script>
    jQuery(document).ready(function () {
        $(".persiandate").persianDatepicker();
    });

    $('.numbersOnly').keyup(function () {
        if (this.value != this.value.replace(/[^0-9\.]/g, '')) {
            this.value = this.value.replace(/[^0-9\.]/g, '');
        }
    });
    </script>
}

