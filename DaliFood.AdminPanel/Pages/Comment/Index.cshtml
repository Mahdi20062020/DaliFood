                        <th scope="col">#</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Product)
                    {
                        <tr>
                            <td>@item.Name</td>


                            <td>@item.ProductCategorie.Name</td>

                            <td>
                                <a asp-page="upsert" asp-route-Id="@item.Id" class="btn btn-warning">ویرایش</a>
                                <a asp-page-handler="Delete" asp-route-Id="@item.Id" onclick="return confirm('آیا از حذف این دسته بندی مطمئن هستید؟');" class="btn btn-danger">حذف</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>*@
    </div>
</div>
@foreach (var item in Model.CustomerComment)
{
    <div class="modal fade" id="@($"Modal{item.Id}")" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">

        @await Component.InvokeAsync("CommentDetail", new { CommentId = item.Id })
    </div>
}
