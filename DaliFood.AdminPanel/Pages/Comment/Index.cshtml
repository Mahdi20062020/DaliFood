@page
@model DaliFood.AdminPanel.Pages.Comment.IndexModel
@{

    ViewData["Title"] = "لیست";
    ViewData["Section"] = "مدیریت نظر ها";

}

@ViewData["ShowPartial"]
@*<script src="~/js/sweetalert2.all.min.js"></script>*@
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="card">
    <div class="card-header header-elements-inline">
        <h5 class="card-title">لیست نظر ها</h5>
        <div class="header-elements">
            <div class="list-icons">
                <a class="list-icons-item" data-action="collapse"></a>
                <a class="list-icons-item" data-action="reload"></a>
                <a class="list-icons-item" data-action="remove"></a>
                <input class="form-control" type="search" id="GridSearch" placeholder="جست و جو" />
            </div>
        </div>
    </div>
    <div class="card-body">
        <hr />
        <a class="btn btn-warning" asp-page="upsert" style="margin-bottom:20px;">افزودن</a>
       
        @(Html.Grid(Model.CustomerComment)
        .Build(c=> {
            c.Add(item => item.Name).Titled("نام");
            c.Add(item => item.Family).Titled("نام خانوادگی");
            c.Add(item => item.Customer.Name).Titled("نام رستوران");
            c.Add(item => item.Status).Titled("وضعیت");
            c.Add(m => Html.Raw($"<div style='display:flex;'><button type=\"button\" class=\"btn btn-warning\" data-toggle=\"modal\" data-target=\"#Modal{m.Id}\">بیشتر...</button>")).Titled("عملیات");
        })
        .Using(GridFilterMode.Header)
        .Empty("No data found")
        .Filterable()
        .Sortable()
        .Pageable()
        )
        @*<button class="show-example-btn" onclick="x('warningConfirm')">
                Try me!
            </button>*@
        @*<table class="table">
                <thead>
                    <tr>
                        <th scope="col">نام</th>
