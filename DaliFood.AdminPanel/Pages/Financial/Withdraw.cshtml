@page
@model DaliFood.AdminPanel.Pages.Financial.WithdrawModel
@{

    ViewData["Title"] = "لیست";
    ViewData["Section"] = "مدیریت غذای مشتریان";
}

<div class="card">
    <div class="card-header header-elements-inline">
        <h5 class="card-title">لیست برداشتی ها</h5>
        <div class="header-elements">
            <div class="list-icons">
                <a class="list-icons-item" data-action="collapse"></a>
                <a class="list-icons-item" data-action="reload"></a>
                <a class="list-icons-item" data-action="remove"></a>
                <form method="get">
                    <input type="search" name="SearchQ" id="GridSearch" placeholder="جست و جو" />
            
                    <label for="SearchStatus">وضعیت:</label>

                    <select name="SearchStatus" id="SearchStatus">
                        <option value="">همه</option>
                        <option value="0">درحال بررسی</option>
                        <option value="1">تایید شده</option>
                        <option value="2">رد شده</option>

                    </select>
                    <input type="number" name="SearchMinPrice" placeholder="حداقل قیمت" />
                    <input type="number" name="SearchMaxPrice" placeholder="حداکثر قیمت" />
                    <div class="input-group-prepend">
                        <span class="input-group-text cursor-pointer" id="enter_date">از تاریخ</span>
                    </div>
                    <input type="text" id="enter_date_1"
                           aria-label="enter_date" aria-describedby="enter_date" />
                    <input type="hidden" name="SearchStartDate" id="enter_date_2"
                           aria-label="enter_date" aria-describedby="enter_date" />



                    <div class="input-group-prepend">
                        <span class="input-group-text cursor-pointer" id="exit_date">تا تاریخ</span>
                    </div>
                    <input type="text" name="exit_date_1" id="exit_date_1" aria-label="exit_date"
                           aria-describedby="exit_date" />
                    <input type="hidden" name="SearchEndDate" id="exit_date_2"
                           aria-label="exit_date" aria-describedby="exit_date" />
                    <input type="submit" class="btn btn-success" value="بیـاب!" />
                </form>
            </div>
        </div>
    </div>
    <div class="card-body">
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">شناسه کاربر</th>
                    <th scope="col">تاریخ برداشت</th>

                    <th scope="col">میزان</th>
                    <th scope="col">توضیحات</th>

                    <th scope="col">شماره کارت</th>
                    <th scope="col">شماره شبا</th>
                    <th scope="col">کدرهگیری</th>
                    <th scope="col">وضعیت</th>
                    <th scope="col">#</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Withdraws)
                {
                    <tr>
                        <td>@item.UserId</td>
                        <td>@item.DepositDate.ToShamsi()</td>
                        <td>@item.Amount</td>
                        <td>@item.Description</td>
                        <td>@item.Cardnumber</td>
                        <td>@item.Shabanumber</td>
                        <td>@item.TrackingCode</td>



                        @switch (item.Status)
                        {
                            case 0:
                                <td><span class="badge bg-blue">درحال بررسی</span></td>
                                break;
                            case 1:
                                <td><span class="badge bg-success">تایید شده</span></td>
                                break;
                            case 2:
                                <td><span class="badge bg-danger">رد شده</span></td>
                                break;
                            default:
                                <td>-</td>
                                break;
                        }
                        <td>
                            @if (item.Status == 1)
                            {
                                <a class="btn btn-secondary text-white">تاییـد شده ✔</a>
                            }
                            else if (item.Status == 2)
                            {
                                <a asp-page-handler="Confirm" asp-route-Id="@item.Id" asp-route-Status="1" onclick="return confirm('آیا از تایید این برداشت مطمئن هستید؟');" class="btn btn-success">تاییـد ✔</a>
                                <a class="btn btn-secondary text-white">رد شده ❌</a>

                            }
                            else
                            {
                                <a asp-page-handler="Confirm" asp-route-Id="@item.Id" asp-route-Status="1" onclick="return confirm('آیا از تایید این برداشت مطمئن هستید؟');" class="btn btn-success">تاییـد ✔</a>
                                <a asp-page-handler="Confirm" asp-route-Id="@item.Id" asp-route-Status="2" onclick="return confirm('آیا از رد این برداشت مطمئن هستید؟');" class="btn btn-danger">رد ❌</a>
                            }
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        $('#enter_date').MdPersianDateTimePicker({
            targetTextSelector: '#enter_date_1',
            targetDateSelector: '#enter_date_2',
            fromDate: true,
            groupId: 'enter_date',

        });

        $('#exit_date').MdPersianDateTimePicker({
            targetTextSelector: '#exit_date_1',
            targetDateSelector: '#exit_date_2',
            toDate: true,
            groupId: 'enter_date',

        });
    </script>
}
