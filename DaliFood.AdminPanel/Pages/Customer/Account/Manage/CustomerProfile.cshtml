@page
@model DaliFood.AdminPanel.Pages.Customer.Account.Manage.CustomerProfileModel
@{
}
@{
    string Title = "فروشنده";
    var CustomerType = (SelectList)ViewData["CustomerTypeId"];
}
<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">

            <input type="hidden" asp-for="Customer.Id" />
            <input type="hidden" asp-for="Customer.LicenseSaveAddress" />
            <input type="hidden" asp-for="Customer.CreateDate" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Customer.TypeId"></label>
                <select asp-for="Customer.TypeId" class="m-t-10 form-control Koodak " asp-items="CustomerType"></select>
                <span asp-validation-for="Customer.TypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Name"></label>
                <input asp-for="Customer.Name" class="form-control" />
                <span asp-validation-for="Customer.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Address"></label>
                <input asp-for="Customer.Address" class="form-control" />
                <span asp-validation-for="Customer.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.ShabaNumber"></label>
                <input asp-for="Customer.ShabaNumber" class="form-control" />
                <span asp-validation-for="Customer.ShabaNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.SendingPrice"></label>
                <input type="number" asp-for="Customer.SendingPrice" class="form-control" />
                <span asp-validation-for="Customer.SendingPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.LicenseSaveAddress"></label>
                <input type="file" name="ImageUpload" class="form-control" />
                <span asp-validation-for="Customer.LicenseSaveAddress" class="text-danger"></span>
            </div>

            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>



@section Scripts
{

    <partial name="_ValidationScriptsPartial" />
}
