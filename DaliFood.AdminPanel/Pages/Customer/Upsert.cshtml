@page
@model DaliFood.AdminPanel.Pages.Customer.UpsertModel
@{
    string Title = "فروشنده";
}
@{
    var CustomerType = (SelectList)ViewData["CustomerTypeId"];
}
<br />
<h2 class="text-info">
    @if (Model.Customer.Id == 0)
    {
        <span>افزودن @Title جدید</span>
    }
    else
    {
        <span>ویرایش @Title</span>
    }


</h2>
<hr />
<form method="post">
    <div class="border p-3">
        @if (Model.Customer.Id != 0)
        {
            <input type="hidden" asp-for="Customer.Id" />
            <input type="hidden" asp-for="Customer.CreateDate" />

        }
        <div class="form-group row">
            <div class="col-2 text-right">
                دسته بندی:
            </div>
            <div class="col-5">
                <select asp-for="Customer.TypeId" class="m-t-10 form-control Koodak " asp-items="CustomerType"></select>
                <span asp-validation-for="Customer.TypeId"></span>
            </div>
        </div>
        <div class="form-group row">
          
            <div class="col-2 text-right">
                نام :
            </div>
            <div class="col-5">
                <input asp-for="Customer.Name" class="form-control" />
                <span asp-validation-for="Customer.Name"></span>
            </div>
           </div>

            <div class="form-group row">
                <div class="col-5 offset-2">
                    <div class="row">
                        <div class="col-6">
                            <input type="submit" class="btn btn-info form-control" value="ثبت" />
                        </div>
                        <div class="col-6">
                            <a asp-page="Index" class="btn btn-outline-success form-control">بازگشت به لیست</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
