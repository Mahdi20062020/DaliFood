@page
@model DaliFood.AdminPanel.Pages.Customer.IndexModel
@{
    string Title = "فروشنده";
}
<div class="container">
<a class="btn btn-outline-primary m-2" asp-page="upsert">افزودن @Title جدید</a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">نام</th>
                <th scope="col">نوع</th>
                <th scope="col">#</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Customer)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.CustomerType.Name</td>
                    <td>
                    <a asp-page="upsert" asp-route-Id="@item.Id" class="btn btn-warning">ویرایش</a>
                    <a asp-page="../CustomersProduct/Index" asp-route-Id="@item.Id" class="btn btn-primary">محصولات</a>
                    <a asp-page-handler="Delete" asp-route-Id="@item.Id" onclick="return confirm('آیا از حذف این @Title مطمئن هستید؟');" class="btn btn-danger">حذف</a>
                </td>
                </tr>
            }
        </tbody>
    </table>
</div>