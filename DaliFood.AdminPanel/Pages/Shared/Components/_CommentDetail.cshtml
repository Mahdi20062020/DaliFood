@model Models.CustomerComment
@{
}
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ModalLabel">نظر @Model.Name @Model.Family برای فروشگاه @Model.Customer.Name</h5>
               
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>@Model.Text</p>
            </div>
            <div class="modal-footer">
                @if (Model.Status == 1)
                {
                    <button type="button" class="btn btn-secondary text-white">تایید شده ✔</button>
                    <form asp-page-handler="Status" asp-page="/Comment/index" method="post">
                        <input name="Id" type="hidden" value="@Model.Id" />
                        <input name="Status" type="hidden" value="2" />
                        <button type="submit" class="btn btn-danger">رد ✖</button>
                    </form>
                }
                else if (Model.Status == 2)
                { <form asp-page-handler="Status" asp-page="/Comment/index" method="post">
                        <input name="Id" type="hidden" value="@Model.Id" />
                        <input name="Status" type="hidden" value="1" />
                        <button type="submit" class="btn btn-success">تایید ✔</button>
                    </form>
                    <button type="button" class="btn btn-secondary text-white">رد شده ✔</button>
                }
                else
                {
                    <form asp-page-handler="Status" asp-page="/Comment/index" method="post">
                        <input name="Id" type="hidden" value="@Model.Id" />
                        <input name="Status" type="hidden" value="1" />
                        <button type="submit" class="btn btn-success">تایید ✔</button>
                    </form>
                    <form asp-page-handler="Status" asp-page="/Comment/index" method="post">
                        <input name="Id" type="hidden" value="@Model.Id" />
                        <input name="Status" type="hidden" value="2" />
                        <button type="submit" class="btn btn-danger">رد ✖</button>
                    </form>
                }


            </div>
        </div>
    </div>
