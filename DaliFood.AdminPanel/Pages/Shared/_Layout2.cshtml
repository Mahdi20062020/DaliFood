<!DOCTYPE html>
<html lang="en" dir="rtl">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"]</title>

    <!--Grid StyleSheets-->
    <link href="~/css/mvc-grid/mvc-grid.css" rel="stylesheet" />

    <!-- Global stylesheets -->
    <link href="~/FarsiFont/FarsiFonts.css" rel="stylesheet" />
    <link href="~/PanelTheme/global_assets/css/icons/icomoon/styles.min.css" rel="stylesheet" />
    @*<link href="https://fonts.googleapis.com/css?family=Roboto:400,300,100,500,700,900" rel="stylesheet" type="text/css">*@
    <link href="~/PanelTheme/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="~/PanelTheme/assets/css/bootstrap_limitless.min.css" rel="stylesheet" type="text/css">
    <link href="~/PanelTheme/assets/css/layout.min.css" rel="stylesheet" type="text/css">
    <link href="~/PanelTheme/assets/css/components.min.css" rel="stylesheet" type="text/css">
    <link href="~/PanelTheme/assets/css/colors.min.css" rel="stylesheet" type="text/css">
    <link href="~/persianDatepicker-master/css/persianDatepicker-default.css" rel="stylesheet" />
    <link href="~/persianDatepicker-master/css/fontawesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/css/toastr.min.css" rel="stylesheet" />

    <!--Mvc Grid stylesheets-->
    <link href="~/css/mvc-grid/mvc-grid.css" rel="stylesheet" />

    <!-- /global stylesheets -->
    <!-- Core JS files -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- /core JS files -->

</head>
<body>

    <!-- Main navbar -->
    <div class="navbar navbar-expand-md navbar-dark bg-indigo navbar-static">
        <partial name="_mainNavbar" />
    </div>
    <!-- /main navbar -->
    <!-- Page content -->
    <div class="page-content">

        <!-- Main sidebar -->
        @await Component.InvokeAsync("Sidebar")
        @*@await Html.PartialAsync("_mainSidebar")*@
        <!-- /main sidebar -->
        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Page header -->
            <div class="page-header page-header-light">
                <partial name="_pageHeader" />
            </div>
            <!-- /page header -->
            <!-- Content area -->
            <div class="content">

                @RenderBody()

            </div>
            <!-- /content area -->
            <!-- Footer -->
            <div class="navbar navbar-expand-lg navbar-light">
                <partial name="_Footer" />
            </div>
            <!-- /footer -->

        </div>
        <!-- /main content -->

    </div>
    <!-- /page content -->
    <!-- Theme JS files -->
    <script src="~/PanelTheme/global_assets/js/plugins/visualization/d3/d3.min.js"></script>
    <script src="~/PanelTheme/global_assets/js/plugins/visualization/d3/d3_tooltip.js"></script>
    <script src="~/PanelTheme/global_assets/js/plugins/forms/styling/switchery.min.js"></script>
    <script src="~/PanelTheme/global_assets/js/plugins/ui/moment/moment.min.js"></script>
    <script src="~/PanelTheme/global_assets/js/plugins/pickers/daterangepicker.js"></script>
    <script src="~/Bootbox/bootbox.js"></script>
    <script src="~/PanelTheme/assets/js/app.js"></script>
    <script src="~/PanelTheme/global_assets/js/demo_pages/dashboard.js"></script>
    <script src="~/js/toastr.min.js"></script>

    <script src="~/PanelTheme/global_assets/js/main/bootstrap.bundle.min.js"></script>
    <script src="~/PanelTheme/global_assets/js/plugins/loaders/blockui.min.js"></script>
    <script src="~/PanelTheme/global_assets/js/plugins/ui/ripple.min.js"></script>
    <script src="~/persianDatepicker-master/js/persianDatepicker.js"></script>
    <!-- /theme JS files -->
    
    
    <!--Grid js-->
    <script src="~/js/mvc-grid/mvc-grid.js"></script>
    <script>
        document.querySelectorAll(".mvc-grid")
            .forEach(element => new MvcGrid(element));
    </script>
    @RenderSection("Scripts", required: false)
</body>

</html>
